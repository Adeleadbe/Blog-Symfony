{% for message in app.flashes('success') %}
    <div class="row">
        <div class="col-12">
            <div class="alert alert-success">
                {{ message|raw }}
            </div>
        </div>
    </div>    
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="row">
        <div class="col-12">
            <div class="alert alert-danger">
                {{ message|raw }}
            </div>
        </div>
    </div>    
{% endfor %}