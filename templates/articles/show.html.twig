{% extends "base.html.twig" %}

{% block container %}

    <h1>{{ article.title }}</h1>
    <hr>

    <p>{{ article.content }}</p>

    <p>{{ article.author.username }}</p>

    <a href="{{ path('app_article') }}" class="btn btn-sm btn-primary">Retour aux articles</a>
    {% if app.user == article.author %} {# Affiche les boutons "Supprimer" et "Modifier" seulement pour l'auteur de l'article #}
        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
        <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
    {% endif %}

{% endblock %}