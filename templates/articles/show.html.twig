{% extends "base.html.twig" %}

{% block container %}

    <h1>{{ article.title }}</h1>
    <hr>

    <p>{{ article.content }}</p>

    <p>{{ article.author }}</p>

    <a href="{{ path('app_article') }}" class="btn btn-sm btn-primary">Retour aux articles</a>
    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-success">Modifier l'article</a>
    <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn btn-sm btn-danger">Supprimer l'article</a>

{% endblock %}