{% extends "base.html.twig" %}

{% block container %}

    <h1>Mes articles | <a href="{{ path('app_article_new') }}" class="btn btn-sm btn-success">Cr√©er un nouvel article</a></h1>
    <hr>

    <div class="row mt-2">
    
        {% for article in articles %}
        <div class="col-md-4 mb-3 d-flex">
            <div class="card flex-fill" style="width: 18rem;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ article.author }}</h6>
                    <p class="card-text flex-fill">{{ article.content }}</p>
                    <div class="mt-auto">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Voir l'article</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>

{% endblock %}